<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_hint_search"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="搜获视频，番剧，UP主或av号"
            android:textSize="12dp"
            android:textColor="#9c9c9c" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:text="大家都在搜"
            android:textColor="#9c9c9c" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                zhy:max_select="-1">

            </com.zhy.view.flowlayout.TagFlowLayout>
        </ScrollView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_group"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:text="兴趣圈"
                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#11000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_header_topic_center"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:text="话题中心"
                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#11000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_header_activity_center"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:text="活动中心"
                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#11000000" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawableLeft="@drawable/ic_btn_rank_original"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:text="原创排行榜"
                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#11000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawableLeft="@drawable/ic_btn_rank_all"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:text="全国排行榜"
                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#11000000" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>